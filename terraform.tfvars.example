# Example terraform.tfvars file
# Copy this file to terraform.tfvars and customize the values

# =============================================================================
# DEPLOYMENT MODE SELECTION
# =============================================================================
# Choose ONE of the following deployment modes:

# -----------------------------------------------------------------------------
# OPTION 1: PROJECT MODE (Single Project)
# Use this for smaller deployments or single-project setups
# -----------------------------------------------------------------------------
project_id = "YOUR_PROJECT_ID"

# -----------------------------------------------------------------------------
# OPTION 2: ORGANIZATION MODE (Multiple Folders)
# Use this for organization-wide deployments to capture logs from multiple GCP folders
# Comment out project_id above and uncomment below:
# -----------------------------------------------------------------------------
# deployment_project_id = "YOUR_DEPLOYMENT_PROJECT_ID"
# monitored_folder_ids = [
#   "folders/123456789",  # Folder 1
#   "folders/987654321",  # Folder 2
# ]
# organization_id = "organizations/111111111"  # Required for custom roles

# -----------------------------------------------------------------------------
# OPTION 3: HYBRID MODE (Folders + Additional Projects)
# Use this when you need folder-level monitoring PLUS specific additional projects
# Comment out project_id above and uncomment below:
# -----------------------------------------------------------------------------
# deployment_project_id = "YOUR_DEPLOYMENT_PROJECT_ID"
# monitored_folder_ids = [
#   "folders/123456789",
# ]
# monitored_project_ids = [
#   "additional-project-1",
#   "additional-project-2",
# ]
# organization_id = "organizations/111111111"

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Enable/disable specific modules (all enabled by default)
# enable_modules = {
#   bigquery      = true
#   dataform      = true
#   dataplex      = true
#   analytics_hub = true
# }

# Enable required Google Cloud APIs (enabled by default)
# enable_apis = true

# Enable Private Log Viewer role (enabled by default)
# enable_privatelogviewer_role = true

# Add custom labels to all resources
# labels = {
#   environment = "production"
#   team        = "data"
#   cost_center = "engineering"
# }
